= form_with(model: category, local: true) do |form|
  - if category.errors.any?
    #error_explanation
      %h2
        = pluralize(category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - category.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :id
    = form.text_field :id, id: :category_id
  .field
    = form.label :title
    = form.text_field :title, id: :category_title
  .field
    = form.label :details
    = form.text_area :details, id: :category_details
  .field
    = form.label :blocked_at
    = form.datetime_select :blocked_at, id: :category_blocked_at
  .field
    = form.label :blocker_id
    = form.text_field :blocker_id, id: :category_blocker_id
  .actions
    = form.submit
